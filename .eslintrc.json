{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns":[
        "dist/"
    ],
    "rules": {
        "brace-style": ["error", "1tbs", { "allowSingleLine": false }],
        "curly": ["error", "all"]
    }
}
